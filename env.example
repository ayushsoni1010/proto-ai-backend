# Proto AI Backend Environment Configuration
# Copy this file to .env and update the values according to your setup

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database?schema=public
DATABASE_URL="postgresql://username:password@localhost:5432/proto_ai_db?schema=public"

# =============================================================================
# AWS CONFIGURATION
# =============================================================================
# AWS region (must be valid AWS region format)
AWS_REGION="us-east-1"

# AWS Access Key ID (16-128 characters, uppercase letters and numbers only)
AWS_ACCESS_KEY_ID="AKIAIOSFODNN7EXAMPLE"

# AWS Secret Access Key (40-128 characters)
AWS_SECRET_ACCESS_KEY="wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY"

# S3 Bucket name (3-63 characters, lowercase letters, numbers, dots, hyphens)
# Cannot start/end with dots or contain consecutive dots
AWS_S3_BUCKET="proto-ai-images"

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Server port (1-65535)
PORT="3001"

# Server host (localhost, 0.0.0.0, IP address, or hostname)
HOST="0.0.0.0"

# Node environment
NODE_ENV="development"

# Allowed CORS origins (comma-separated, use * for all)
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001"

# =============================================================================
# IMAGE PROCESSING CONFIGURATION
# =============================================================================
# Minimum image dimensions (positive integers)
MIN_IMAGE_WIDTH="300"
MIN_IMAGE_HEIGHT="300"

# Maximum image dimensions (positive integers)
MAX_IMAGE_WIDTH="4000"
MAX_IMAGE_HEIGHT="4000"

# Maximum file size in bytes (10MB = 10485760)
MAX_FILE_SIZE="10485760"

# Supported image formats (comma-separated)
SUPPORTED_IMAGE_FORMATS="jpg,jpeg,png,webp"

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT Secret (32-512 characters, base64 characters only)
JWT_SECRET="your-super-secure-jwt-secret-key-that-is-at-least-32-characters-long"

# JWT expiration time (format: number + s/m/h/d)
JWT_EXPIRES_IN="24h"

# Rate limiting window in milliseconds (15 minutes = 900000)
RATE_LIMIT_WINDOW_MS="900000"

# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS="100"

# BCrypt rounds for password hashing (10-15)
BCRYPT_ROUNDS="12"

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level (error, warn, info, debug)
LOG_LEVEL="info"

# Log file max size (format: number + k/m/g + optional b)
LOG_FILE_MAX_SIZE="10m"

# Maximum number of log files to keep
LOG_FILE_MAX_FILES="5"

# =============================================================================
# UPLOAD CONFIGURATION
# =============================================================================
# Temporary upload directory (cannot contain '..')
UPLOAD_TEMP_DIR="./uploads/temp"

# Maximum number of files per upload
UPLOAD_MAX_FILES="10"

# Chunk size for file uploads in bytes (1MB = 1048576)
UPLOAD_CHUNK_SIZE="1048576"

# =============================================================================
# HEALTH CHECK CONFIGURATION
# =============================================================================
# Health check interval in milliseconds (30 seconds = 30000)
HEALTH_CHECK_INTERVAL="30000"

# Health check timeout in milliseconds (5 seconds = 5000)
HEALTH_CHECK_TIMEOUT="5000"

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
# Cache TTL in seconds (1 hour = 3600)
CACHE_TTL="3600"

# Maximum cache size
CACHE_MAX_SIZE="100"

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
# Enable metrics collection (true/false)
ENABLE_METRICS="false"

# Metrics server port (1-65535)
METRICS_PORT="9090"
